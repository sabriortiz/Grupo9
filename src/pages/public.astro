---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <h1 class="title-public">Publica tu historia: </h1>
  <main>
    <section id="leyendas-container">
      <!-- las leyendas se insertan aca -->
    </section>
    <section class="form">
      <h2>Envía una nueva leyenda</h2>
      <form id="leyendaForm">
        <input type="text" id="titulo" placeholder="Título" required />
        <input type="text" id="region" placeholder="Región" required />
        <textarea id="contenido" placeholder="Escribe la leyenda..." required
        ></textarea>
        <input type="url" id="imagen" placeholder="URL de imagen (opcional)" />
        <button type="submit">Agregar Leyenda</button>
      </form>
    </section>
  </main>
  <script src="/scripts/public.js" defer></script>
</MainLayout>

<style>
  *{
    /* outline: 1px solid orange; */
  }
  .title-public{
    padding: 2rem;
  }
  .title-public::after{
        content: "";
        display: block;
        width: 200px;
        height: 4px;
        background-color: oklch(70.19% 0.131 264.2); /* azul decorativo */
        margin-top: 0.5rem;
        border-radius: 2px;
        box-shadow: 0 2px 4px oklch(0% 0 0 / 0.1);
  }
  main {
    padding: 2rem;
    max-width: 1000px;
    margin: auto;
  }

  #leyendas-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
    .card {
      background: oklch(0.5 0.1395 70.94);
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: scale(1.02);
    }
    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    .card-content {
      padding: 1rem;
    }

    .card-content h3 {
      margin: 0 0 0.5rem;
    }
  }

  .form {
    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    input,
    textarea,
    button {
      padding: 0.8rem;
      font-size: 1rem;
    }
    button {
      background: #333;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }
    button:hover {
      background: #555;
    }
  }
</style>
