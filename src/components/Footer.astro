<style>
    .nav-img {
        height: 70px;
        width: auto;
    }
    .nav-container {
        padding: 1rem 2rem;
    }
    footer {
        background: linear-gradient(
            to right,
            oklch(0.7 0.1395 70.94),
            oklch(0.5 0.1395 70.94)
        );
        display: flex;
        justify-content: space-between;
        padding: 20px;
        position: relative;
        left: 0px;
        bottom: 0px;
        width: 100%;

        ul {
            list-style: none;

            li {
                display: inline-block;
                margin-right: 15px;
            }
        }

        a {
            color: rgb(225, 225, 225);
            text-decoration: none;
        }
    }

    .fa-facebook {
        font-size: 3em;
    }

    .fa-instagram {
        font-size: 3em;
    }

    .fa-whatsapp {
        font-size: 3em;
    }

    @media screen and (max-width: 800px) {
        align-items: center;
        text-align: center;
        gap: 10px;
        flex-direction: column;
        justify-content: normal;
        height: 55vh;
    }
    @media screen and (max-width: 640px) {
        footer {
            text-align: center;
            align-items: center;
            gap: 20px;
            flex-direction: column;
            height: auto;
            overflow-x: hidden;
 
        }
    }
